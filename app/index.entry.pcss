    display: flex;
    align-items: center;
    justify-content: space-evenly;

    @media (--md) {
      display: grid;
      justify-items: center;
      align-items: center;

      & img {
        justify-self: flex-end;
      }
    }

    & .toolbox-text {
      display: flex;
      flex-direction: column;
      gap: 12px;

      & a:hover {
        color: #dc5b06;
      }

      & h2 {
        font-family: Gotham, sans-serif;
        font-size: 28px;
        font-weight: 300;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.43;
        letter-spacing: normal;
        color: #fff;
      }

      & p {
        font-family: SFProText, sans-serif;
        font-size: 18px;
        font-weight: normal;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.56;
        letter-spacing: normal;
        color: rgba(255, 255, 255, 0.6);
      }
    }
  }
}

.businesses {

  & .wt-container {
    display: grid;
    justify-content: space-between;
    grid-template-columns: 1fr 3fr;
    column-gap: 64px;

    @media (--md) {
      column-gap: 32px;

    }

    & h2 {
      font-family: Gotham, sans-serif;
      font-size: 28px;
      font-weight: 300;
      font-stretch: normal;
      font-style: normal;
      line-height: 1.43;
      letter-spacing: normal;
      color: #27282c;
    }

    & .logos {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      justify-items: center;
      align-items: center;
      row-gap: 32px;

      & img {
        max-width: 100%;
        object-fit: contain;
      }
    }

  }
}

